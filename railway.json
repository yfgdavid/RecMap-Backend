{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "api": {
      "rootDirectory": ".",
      "buildCommand": "npm install",
      "startCommand": "npm run start"
    },
    "pdf-service": {
      "rootDirectory": "src/services/pdf-service-python",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "python -m uvicorn pdfApi:app --host 0.0.0.0 --port 8000"
    }
  }
}
